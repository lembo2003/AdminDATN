<%- include('../../partials/header') %>

<div class="container-fluid">
  <div class="row">
    <!-- Admin Sidebar -->
    <div class="col-md-3 col-lg-2 d-md-block bg-dark sidebar">
      <%- include('../../partials/admin-sidebar', {path: '/admin/room-types'}) %>
    </div>
    
    <!-- Main Content -->
    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 admin-content">
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Room Type Management</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
          <a href="/admin/room-types/add" class="btn btn-sm btn-primary">
            <i class="fas fa-plus me-1"></i> Add New Room Type
          </a>
        </div>
      </div>
      
      <!-- Flash Messages -->
      <% if(success_msg != ''){ %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <%= success_msg %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% } %>
      
      <% if(error_msg != ''){ %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <%= error_msg %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% } %>
      
      <!-- Room Types Table -->
      <div class="card">
        <div class="card-body p-0">
          <div class="table-responsive">
            <table class="table table-hover mb-0">
              <thead class="table-light">
                <tr>
                  <th>Name</th>
                  <th>Daily Rate</th>
                  <th>Hourly Rate</th>
                  <th>Weekly/Monthly</th>
                  <th>Capacity</th>
                  <th>Description</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% if(roomTypes && roomTypes.length > 0) { %>
                  <% roomTypes.forEach(roomType => { %>
                    <tr>
                      <td>
                        <strong><%= roomType.roomTypeName %></strong>
                        <div class="small text-muted"><%= roomType.roomTypeId.substring(0, 8) %>...</div>
                      </td>
                      <td>
                        <div class="text-primary fw-bold">
                          $<%= roomType.pricing ? roomType.pricing.daily : '0' %>
                        </div>
                        <div class="small text-muted">
                          Overnight: $<%= roomType.pricing ? roomType.pricing.overnight : '0' %>
                        </div>
                      </td>
                      <td>
                        <% if (roomType.pricing && roomType.pricing.hourly) { %>
                          $<%= roomType.pricing.hourly.basePrice %> + $<%= roomType.pricing.hourly.additionalHourPrice %>/hr
                        <% } else { %>
                          --
                        <% } %>
                      </td>
                      <td>
                        <div class="small">
                          <div>Weekly: $<%= roomType.pricing ? roomType.pricing.weekly : '0' %></div>
                          <div>Monthly: $<%= roomType.pricing ? roomType.pricing.monthly : '0' %></div>
                        </div>
                      </td>
                      <td>
                        <span class="badge bg-info">
                          <i class="fas fa-user-friends me-1"></i> <%= roomType.capacity || 2 %>
                        </span>
                      </td>
                      <td>
                        <% if(roomType.description) { %>
                          <%= roomType.description.length > 50 ? roomType.description.substring(0, 50) + '...' : roomType.description %>
                        <% } else { %>
                          <span class="text-muted">No description</span>
                        <% } %>
                      </td>
                      <td>
                        <div class="btn-group" role="group">
                          <a href="/admin/room-types/edit/<%= roomType.id %>" class="btn btn-sm btn-outline-primary">
                            <i class="fas fa-edit"></i>
                          </a>
                          <button type="button" class="btn btn-sm btn-outline-danger delete-btn" onclick="checkDeleteRoomType('<%= roomType.id %>', '<%= roomType.roomTypeName %>')">
                            <i class="fas fa-trash"></i>
                          </button>
                        </div>
                      </td>
                    </tr>
                  <% }); %>
                <% } else { %>
                  <tr>
                    <td colspan="7" class="text-center py-4">No room types found</td>
                  </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </main>
  </div>
</div>

<!-- Common Delete Modal -->
<div class="modal fade" id="deleteRoomTypeModal" tabindex="-1" aria-labelledby="deleteRoomTypeModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="deleteRoomTypeModalLabel">Delete Room Type</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div id="deleteModalSpinner" class="text-center p-4">
          <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
          </div>
          <p class="mt-2">Checking room dependencies...</p>
        </div>
        
        <div id="deleteModalContent" style="display: none;">
          <p id="deleteRoomTypeMessage">Are you sure you want to delete this room type?</p>
          
          <div id="roomWarning" class="alert alert-danger" style="display: none;">
            <i class="fas fa-exclamation-triangle me-2"></i>
            <span id="roomCountMessage">Cannot delete room type. It is being used by rooms.</span>
          </div>
          
          <div id="generalWarning" class="alert alert-warning">
            <i class="fas fa-exclamation-triangle me-2"></i>
            This action cannot be undone. Any rooms using this type will need to be reassigned.
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <form id="deleteRoomTypeForm" action="/admin/room-types/delete/" method="POST" style="display: inline; margin: 0;">
          <input type="hidden" name="_method" value="DELETE">
          <button type="submit" id="deleteButton" class="btn btn-danger">Delete</button>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('../../partials/footer') %>

<script>
  // Improved delete check to first verify if rooms are using this room type
  async function checkDeleteRoomType(roomTypeId, roomTypeName) {
    // Show the modal with loading spinner
    const modal = new bootstrap.Modal(document.getElementById('deleteRoomTypeModal'), {
      backdrop: 'static',
      keyboard: false
    });
    
    // Reset modal state
    document.getElementById('deleteModalSpinner').style.display = 'block';
    document.getElementById('deleteModalContent').style.display = 'none';
    document.getElementById('roomWarning').style.display = 'none';
    document.getElementById('deleteButton').disabled = false;
    
    // Update form action
    document.getElementById('deleteRoomTypeForm').action = `/admin/room-types/delete/${roomTypeId}?_method=DELETE`;
    
    // Update confirmation message
    document.getElementById('deleteRoomTypeMessage').textContent = `Are you sure you want to delete room type "${roomTypeName}"?`;
    
    // Show the modal
    modal.show();
    
    try {
      // Check if any rooms use this room type
      const response = await fetch(`/api/room-types/${roomTypeId}/room-count`);
      const data = await response.json();
      
      // Hide spinner
      document.getElementById('deleteModalSpinner').style.display = 'none';
      document.getElementById('deleteModalContent').style.display = 'block';
      
      if (data.count > 0) {
        // Show warning and disable delete button
        document.getElementById('roomWarning').style.display = 'block';
        document.getElementById('roomCountMessage').textContent = 
          `Cannot delete room type. It is being used by ${data.count} room(s).`;
        document.getElementById('deleteButton').disabled = true;
      }
    } catch (error) {
      console.error('Error checking room dependencies:', error);
      
      // If API fails, show modal content without specific warning
      document.getElementById('deleteModalSpinner').style.display = 'none';
      document.getElementById('deleteModalContent').style.display = 'block';
    }
  }
  
  // Fallback function if API is not available
  function openDeleteModal(roomTypeId, roomTypeName) {
    // Update the form action
    document.getElementById('deleteRoomTypeForm').action = `/admin/room-types/delete/${roomTypeId}?_method=DELETE`;
    
    // Update the confirmation message
    document.getElementById('deleteRoomTypeMessage').textContent = `Are you sure you want to delete room type "${roomTypeName}"?`;
    
    // Hide spinner, show content
    document.getElementById('deleteModalSpinner').style.display = 'none';
    document.getElementById('deleteModalContent').style.display = 'block';
    
    // Show the modal
    const modal = new bootstrap.Modal(document.getElementById('deleteRoomTypeModal'), {
      backdrop: 'static',
      keyboard: false
    });
    
    modal.show();
  }
</script>