<%- include('./partials/header') %>

<!-- Hero Section -->
<section class="hero-section position-relative">
  <div id="heroCarousel" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src="https://placehold.co/1600x800?text=Luxury+Hotel" class="d-block w-100" alt="Luxury Hotel">
        <div class="carousel-caption">
          <h1 class="display-4 fw-bold">Luxury Hotel Experience</h1>
          <p class="lead">Experience the perfect blend of comfort, luxury and exceptional service</p>
          <a href="/rooms" class="btn btn-primary btn-lg px-4 me-2">View Rooms</a>
          <a href="/auth/signup" class="btn btn-outline-light btn-lg px-4">Sign Up</a>
        </div>
      </div>
      <div class="carousel-item">
        <img src="https://placehold.co/1600x800?text=Premium+Rooms" class="d-block w-100" alt="Premium Rooms">
        <div class="carousel-caption">
          <h1 class="display-4 fw-bold">Premium Rooms</h1>
          <p class="lead">Relax in style with our premium accommodations</p>
          <a href="/rooms" class="btn btn-primary btn-lg px-4">Book Now</a>
        </div>
      </div>
      <div class="carousel-item">
        <img src="https://placehold.co/1600x800?text=Restaurant" class="d-block w-100" alt="Restaurant">
        <div class="carousel-caption">
          <h1 class="display-4 fw-bold">Fine Dining Experience</h1>
          <p class="lead">Enjoy our exquisite room service and restaurant offerings</p>
          <a href="/orders/menu" class="btn btn-primary btn-lg px-4">View Menu</a>
        </div>
      </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
</section>

<!-- Search Box -->
<section class="search-box py-4 bg-light">
  <div class="container">
    <div class="card shadow border-0">
      <div class="card-body p-4">
        <form action="/rooms/search" method="GET" class="row g-3 align-items-end">
          <div class="col-md-4">
            <label for="query" class="form-label">Search Rooms</label>
            <div class="input-group">
              <span class="input-group-text"><i class="fas fa-search"></i></span>
              <input type="text" class="form-control" id="query" name="query" placeholder="Room type or features...">
            </div>
          </div>
          <div class="col-md-2">
            <label for="checkIn" class="form-label">Check In</label>
            <input type="date" class="form-control" id="checkIn" name="checkIn">
          </div>
          <div class="col-md-2">
            <label for="checkOut" class="form-label">Check Out</label>
            <input type="date" class="form-control" id="checkOut" name="checkOut">
          </div>
          <div class="col-md-2">
            <label for="guests" class="form-label">Guests</label>
            <select class="form-select" id="guests" name="guests">
              <option value="1">1 Guest</option>
              <option value="2" selected>2 Guests</option>
              <option value="3">3 Guests</option>
              <option value="4">4 Guests</option>
              <option value="5">5+ Guests</option>
            </select>
          </div>
          <div class="col-md-2">
            <button type="submit" class="btn btn-primary w-100">Search</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>

<!-- Flash Messages -->
<div class="container mt-4">
  <% if(success_msg != ''){ %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= success_msg %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% } %>
  
  <% if(error_msg != ''){ %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <%= error_msg %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% } %>
</div>

