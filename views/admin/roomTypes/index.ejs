<%- include('../../partials/header') %>

<div class="container-fluid">
  <div class="row">
    <!-- Admin Sidebar -->
    <div class="col-md-3 col-lg-2 d-md-block bg-dark sidebar">
      <%- include('../../partials/admin-sidebar', {path: '/admin/room-types'}) %>
    </div>
    
    <!-- Main Content -->
    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 admin-content">
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Room Type Management</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
          <a href="/admin/room-types/add" class="btn btn-sm btn-primary">
            <i class="fas fa-plus me-1"></i> Add New Room Type
          </a>
        </div>
      </div>
      
      <!-- Flash Messages -->
      <% if(success_msg != ''){ %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <%= success_msg %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% } %>
      
      <% if(error_msg != ''){ %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <%= error_msg %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% } %>
      
      <!-- Room Types Table -->
      <div class="card">
        <div class="card-body p-0">
          <div class="table-responsive">
            <table class="table table-hover mb-0">
              <thead class="table-light">
                <tr>
                  <th>Room Type ID</th>
                  <th>Name</th>
                  <th>Description</th>
                  <th>Created At</th>
                  <th>Updated At</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% if(roomTypes && roomTypes.length > 0) { %>
                  <% roomTypes.forEach(roomType => { %>
                    <tr>
                      <td><%= roomType.roomTypeId.substring(0, 8) %>...</td>
                      <td><%= roomType.roomTypeName %></td>
                      <td>
                        <% if(roomType.description) { %>
                          <%= roomType.description.length > 50 ? roomType.description.substring(0, 50) + '...' : roomType.description %>
                        <% } else { %>
                          <span class="text-muted">No description</span>
                        <% } %>
                      </td>
                      <td><%= new Date(roomType.createdAt.seconds * 1000).toLocaleDateString() %></td>
                      <td><%= new Date(roomType.updatedAt.seconds * 1000).toLocaleDateString() %></td>
                      <td>
                        <div class="btn-group" role="group">
                          <a href="/admin/room-types/edit/<%= roomType.id %>" class="btn btn-sm btn-outline-primary">
                            <i class="fas fa-edit"></i>
                          </a>
                          <button type="button" class="btn btn-sm btn-outline-danger delete-btn" onclick="openDeleteModal('<%= roomType.id %>', '<%= roomType.roomTypeName %>')">
                            <i class="fas fa-trash"></i>
                          </button>
                        </div>
                      </td>
                    </tr>
                  <% }); %>
                <% } else { %>
                  <tr>
                    <td colspan="6" class="text-center py-4">No room types found</td>
                  </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </main>
  </div>
</div>

<!-- Common Delete Modal -->
<div class="modal fade" id="deleteRoomTypeModal" tabindex="-1" aria-labelledby="deleteRoomTypeModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="deleteRoomTypeModalLabel">Delete Room Type</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p id="deleteRoomTypeMessage">Are you sure you want to delete this room type?</p>
        <div class="alert alert-warning">
          <i class="fas fa-exclamation-triangle me-2"></i>
          This action cannot be undone. Any rooms using this type will need to be reassigned.
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <form id="deleteRoomTypeForm" action="/admin/room-types/delete/" method="POST" style="display: inline; margin: 0;">
          <input type="hidden" name="_method" value="DELETE">
          <button type="submit" class="btn btn-danger">Delete</button>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('../../partials/footer') %>

<script>
  // Use a single modal for all delete operations
  function openDeleteModal(roomTypeId, roomTypeName) {
    // Update the form action
    document.getElementById('deleteRoomTypeForm').action = `/admin/room-types/delete/${roomTypeId}?_method=DELETE`;
    
    // Update the confirmation message
    document.getElementById('deleteRoomTypeMessage').textContent = `Are you sure you want to delete room type "${roomTypeName}"?`;
    
    // Show the modal
    const modal = new bootstrap.Modal(document.getElementById('deleteRoomTypeModal'), {
      backdrop: 'static',
      keyboard: false
    });
    
    modal.show();
  }
</script>