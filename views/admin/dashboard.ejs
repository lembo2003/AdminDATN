<%- include('../partials/header') %>

<div class="container-fluid">
  <div class="row">
    <!-- Admin Sidebar -->
    <div class="col-md-3 col-lg-2 d-md-block bg-dark sidebar collapse">
      <%- include('../partials/admin-sidebar') %>
    </div>
    
    <!-- Main Content -->
    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Dashboard</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
          <div class="btn-group me-2">
            <button type="button" class="btn btn-sm btn-outline-secondary">Export</button>
          </div>
          <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle">
            <i class="fas fa-calendar me-1"></i>
            This week
          </button>
        </div>
      </div>
      
      <!-- Flash Messages -->
      <% if(success_msg != ''){ %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <%= success_msg %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% } %>
      
      <% if(error_msg != ''){ %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <%= error_msg %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% } %>
      
      <!-- Stats Cards -->
      <div class="row row-cols-1 row-cols-md-2 row-cols-xl-4 g-4 mb-4">
        <div class="col">
          <div class="card text-white bg-primary h-100">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <h6 class="card-title">Total Rooms</h6>
                  <h2 class="mb-0"><%= stats.totalRooms || 0 %></h2>
                </div>
                <i class="fas fa-bed fa-3x opacity-50"></i>
              </div>
              <p class="card-text mt-3">
                <span class="text-white-50">Available: </span>
                <span class="text-white"><%= stats.availableRooms || 0 %></span>
              </p>
            </div>
            <div class="card-footer d-flex justify-content-between align-items-center">
              <span>Occupancy Rate</span>
              <span class="badge bg-white text-primary"><%= stats.occupancyRate || 0 %>%</span>
            </div>
          </div>
        </div>
        
        <div class="col">
          <div class="card text-white bg-success h-100">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <h6 class="card-title">Total Bookings</h6>
                  <h2 class="mb-0"><%= stats.totalBookings || 0 %></h2>
                </div>
                <i class="fas fa-calendar-check fa-3x opacity-50"></i>
              </div>
              <p class="card-text mt-3">
                <span class="text-white-50">Pending: </span>
                <span class="text-white"><%= stats.pendingBookings || 0 %></span>
              </p>
            </div>
            <div class="card-footer d-flex justify-content-between align-items-center">
              <span>Guests Checked In</span>
              <span class="badge bg-white text-success"><%= stats.checkedInGuests || 0 %></span>
            </div>
          </div>
        </div>
        
        <div class="col">
          <div class="card text-white bg-info h-100">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <h6 class="card-title">Total Orders</h6>
                  <h2 class="mb-0"><%= stats.totalOrders || 0 %></h2>
                </div>
                <i class="fas fa-shopping-cart fa-3x opacity-50"></i>
              </div>
              <p class="card-text mt-3">
                <span class="text-white-50">Pending: </span>
                <span class="text-white"><%= stats.pendingOrders || 0 %></span>
              </p>
            </div>
            <div class="card-footer d-flex justify-content-between align-items-center">
              <span>Room Service</span>
              <span class="badge bg-white text-info"><%= stats.pendingOrders || 0 %> pending</span>
            </div>
          </div>
        </div>
        
        <div class="col">
          <div class="card text-white bg-warning h-100">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <h6 class="card-title">Total Revenue</h6>
                  <h2 class="mb-0">$<%= totalRevenue ? totalRevenue.toLocaleString() : 0 %></h2>
                </div>
                <i class="fas fa-money-bill-wave fa-3x opacity-50"></i>
              </div>
              <p class="card-text mt-3">
                <span class="text-white-50">Users: </span>
                <span class="text-white"><%= stats.totalUsers || 0 %></span>
              </p>
            </div>
            <div class="card-footer d-flex justify-content-between align-items-center">
              <span>Revenue Growth</span>
              <span class="badge bg-white text-warning">+15%</span>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Recent Bookings -->
      <div class="card mb-4">
        <div class="card-header bg-light d-flex justify-content-between align-items-center">
          <h5 class="mb-0">Recent Bookings</h5>
          <a href="/admin/bookings" class="btn btn-sm btn-primary">View All</a>
        </div>
        <div class="card-body p-0">
          <div class="table-responsive">
            <table class="table table-hover mb-0">
              <thead class="table-light">
                <tr>
                  <th>Booking ID</th>
                  <th>Guest</th>
                  <th>Room</th>
                  <th>Check-In</th>
                  <th>Check-Out</th>
                  <th>Status</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% if(recentBookings && recentBookings.length > 0) { %>
                  <% recentBookings.forEach(booking => { %>
                    <tr>
                      <td><%= booking.bookingId.substring(0, 8) %>...</td>
                      <td><%= booking.user ? (booking.user.name || booking.user.email) : 'Unknown' %></td>
                      <td><%= booking.room ? booking.room.roomName : 'Unknown' %></td>
                      <td><%= new Date(booking.checkInDate).toLocaleDateString() %></td>
                      <td><%= new Date(booking.checkOutDate).toLocaleDateString() %></td>
                      <td>
                        <% if(booking.status === 'booked') { %>
                          <span class="badge bg-info">Booked</span>
                        <% } else if(booking.status === 'checked-in') { %>
                          <span class="badge bg-success">Checked In</span>
                        <% } else if(booking.status === 'checked-out') { %>
                          <span class="badge bg-secondary">Checked Out</span>
                        <% } else if(booking.status === 'cancelled') { %>
                          <span class="badge bg-danger">Cancelled</span>
                        <% } %>
                      </td>
                      <td>
                        <a href="/admin/bookings/details/<%= booking.id %>" class="btn btn-sm btn-info">
                          <i class="fas fa-eye"></i>
                        </a>
                      </td>
                    </tr>
                  <% }); %>
                <% } else { %>
                  <tr>
                    <td colspan="7" class="text-center py-3">No recent bookings found</td>
                  </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      
      <!-- Quick Actions -->
      <div class="row mb-4">
        <div class="col-md-6">
          <div class="card h-100">
            <div class="card-header bg-light">
              <h5 class="mb-0">Quick Actions</h5>
            </div>
            <div class="card-body">
              <div class="row g-3">
                <div class="col-6">
                  <a href="/admin/rooms/add" class="btn btn-primary btn-lg w-100 h-100 d-flex flex-column align-items-center justify-content-center py-4">
                    <i class="fas fa-bed fa-2x mb-2"></i>
                    <span>Add Room</span>
                  </a>
                </div>
                <div class="col-6">
                  <a href="/admin/room-types/add" class="btn btn-success btn-lg w-100 h-100 d-flex flex-column align-items-center justify-content-center py-4">
                    <i class="fas fa-tags fa-2x mb-2"></i>
                    <span>Add Room Type</span>
                  </a>
                </div>
                <div class="col-6">
                  <a href="/admin/staff/add" class="btn btn-info btn-lg w-100 h-100 d-flex flex-column align-items-center justify-content-center py-4">
                    <i class="fas fa-user-tie fa-2x mb-2"></i>
                    <span>Add Staff</span>
                  </a>
                </div>
                <div class="col-6">
                  <a href="/admin/order-items/add" class="btn btn-warning btn-lg w-100 h-100 d-flex flex-column align-items-center justify-content-center py-4">
                    <i class="fas fa-utensils fa-2x mb-2"></i>
                    <span>Add Menu Item</span>
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
        
        <div class="col-md-6">
          <div class="card h-100">
            <div class="card-header bg-light">
              <h5 class="mb-0">System Status</h5>
            </div>
            <div class="card-body">
              <ul class="list-group">
                <li class="list-group-item d-flex justify-content-between align-items-center">
                  <div>
                    <i class="fas fa-server me-2 text-primary"></i>
                    Firebase Connection
                  </div>
                  <span class="badge bg-success rounded-pill">Connected</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                  <div>
                    <i class="fas fa-database me-2 text-primary"></i>
                    Database Status
                  </div>
                  <span class="badge bg-success rounded-pill">Online</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                  <div>
                    <i class="fas fa-save me-2 text-primary"></i>
                    Storage Status
                  </div>
                  <span class="badge bg-success rounded-pill">Online</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                  <div>
                    <i class="fas fa-cloud me-2 text-primary"></i>
                    API Status
                  </div>
                  <span class="badge bg-success rounded-pill">Online</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                  <div>
                    <i class="fas fa-sync-alt me-2 text-primary"></i>
                    Last System Update
                  </div>
                  <span class="badge bg-secondary rounded-pill">
                    <%= new Date().toLocaleDateString() %>
                  </span>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>
</div>

<%- include('../partials/footer') %>
